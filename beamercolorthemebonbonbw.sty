\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{beamercolorthemebonbonbw}[2017/07/30 Bonbon color theme]

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% Required packages and configuration.                                         %
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

\RequirePackage{color}

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% Color definitions.                                                           %
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

% Body colors.
\definecolor{dirtywhite}{RGB}{255, 255, 255}
\definecolor{smokegray}{RGB}{40, 40, 40}
\definecolor{headblack}{RGB}{0, 0, 0}

% Title colors.
\definecolor{bloodred}{RGB}{0, 0, 0}
\definecolor{royalblue}{RGB}{0, 0, 0}

% Block colors.
\definecolor{lightash}{RGB}{230, 230, 230}
\definecolor{darkash}{RGB}{211, 211, 211}
\definecolor{mossgreen}{RGB}{0, 0, 0}
\definecolor{amber}{RGB}{0, 0, 0}


%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% Color styles.                                                                %
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

% Text and background colors.
\setbeamercolor{normal text}{fg=black}
\setbeamercolor{background canvas}{bg=white}

% Title page colors.
\setbeamercolor{title page}{fg=black, bg=white}
\setbeamercolor{title}{fg=black}
\setbeamercolor{subtitle}{fg=black}
\setbeamercolor{subsubtitle}{fg=black}

% TOC colors.
\setbeamercolor{section in toc}{fg=black}

% Frame and section colors.
\setbeamercolor{frametitle}{fg=black}
\setbeamercolor{section title}{fg=black}
\setbeamercolor{section page}{fg=black, bg=white}
\setbeamercolor{subsection title}{fg=black}
\setbeamercolor{subsection page}{fg=black, bg=white}

% List colors.
\setbeamercolor{itemize item}{fg=black}
\setbeamercolor{enumerate item}{fg=black}
\setbeamercolor{enumerate subitem}{fg=black}
\setbeamercolor{description item}{fg=black}

% Block colors.
\setbeamercolor{alerted text}{fg=black}
\setbeamercolor{example text}{fg=black}
\setbeamercolor{block title}{fg=black, bg=darkash}
\setbeamercolor{block body}{fg=smokegray, bg=lightash}
\setbeamercolor{block title alerted}{fg=black, bg=darkash}
\setbeamercolor{block body alerted}{fg=smokegray, bg=lightash}
\setbeamercolor{block title example}{fg=black, bg=darkash}
\setbeamercolor{block body example}{fg=smokegray, bg=lightash}

\mode<all>
